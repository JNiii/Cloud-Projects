{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "firewallName": {
            "type": "string",
            "metadata": {
                "description": "Name of Firewall"
            },
            "defaultValue": "az-fw"
        },
        "onpremAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "Spoke1 Virtual Network Address Prefix"
            },
            "defaultValue": "172.16.0.0/16"
        },
        "azureNetwork": {
            "type": "string",
            "metadata": {
                "description": "Address of Virtual Network in Azure"
            },
            "defaultValue": "10.0.0.0/8"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "spoke-rt",
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2024-03-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "routes": [
                    {
                        "name": "to-dg",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(resourceId('Microsoft.Network/azureFirewalls', parameters('firewallName'))).hubIPAddresses.privateIPAddress]"
                        }
                    }
                ],
                "disableBgpRoutePropagation": true
            }
        },
        {
            "name": "fw-rt",
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2024-03-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "routes": [
                    {
                        "name": "to-onprem",
                        "properties": {
                            "addressPrefix": "[parameters('onpremAddressPrefix')]",
                            "nextHopType": "VirtualNetworkGateway"
                        }
                    },
                    {
                        "name": "to-internet",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "Internet"
                        }
                    },
                    {
                        "name": "to-azure",
                        "properties": {
                            "addressPrefix": "[parameters('azureNetwork')]",
                            "nextHopType": "VnetLocal"
                        }
                    }
                ],
                "disableBgpRoutePropagation": true
            }
        },
        {
            "name": "gw-rt",
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2024-03-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "routes": [
                    {
                        "name": "to-dg",
                        "properties": {
                            "addressPrefix": "[parameters('azureNetwork')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[reference(resourceId('Microsoft.Network/azureFirewalls', parameters('firewallName'))).hubIPAddresses.privateIPAddress]"
                        }
                    }
                ],
                "disableBgpRoutePropagation": true
            }
        }
    ],
    "outputs": {}
}