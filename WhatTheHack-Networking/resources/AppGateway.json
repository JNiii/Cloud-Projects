{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "applicationGateways_app_gw_name": {
            "defaultValue": "app-gw",
            "type": "String"
        },
        "virtualNetworks_hub_vnet_externalid": {
            "defaultValue": "/subscriptions/4f6a6eb9-27d0-4ed6-a31c-2bde135e2db6/resourceGroups/rg_sb_eastus_251794_1_173874849427/providers/Microsoft.Network/virtualNetworks/hub-vnet",
            "type": "String"
        },
        "publicIPAddresses_app_gw_pip_externalid": {
            "defaultValue": "/subscriptions/4f6a6eb9-27d0-4ed6-a31c-2bde135e2db6/resourceGroups/rg_sb_eastus_251794_1_173874849427/providers/Microsoft.Network/publicIPAddresses/app-gw-pip",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/applicationGateways",
            "apiVersion": "2024-03-01",
            "name": "[parameters('applicationGateways_app_gw_name')]",
            "location": "eastus",
            "zones": [
                "1"
            ],
            "properties": {
                "sku": {
                    "name": "Standard_v2",
                    "tier": "Standard_v2",
                    "family": "Generation_1",
                    "capacity": 2
                },
                "gatewayIPConfigurations": [
                    {
                        "name": "appGatewayIpConfig",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/gatewayIPConfigurations/appGatewayIpConfig')]",
                        "properties": {
                            "subnet": {
                                "id": "[concat(parameters('virtualNetworks_hub_vnet_externalid'), concat('/subnets/', parameters('applicationGateways_app_gw_name'), '-subnet'))]"
                            }
                        }
                    }
                ],
                "sslCertificates": [],
                "trustedRootCertificates": [],
                "trustedClientCertificates": [],
                "sslProfiles": [],
                "frontendIPConfigurations": [
                    {
                        "name": "appGwPublicFrontendIpIPv4",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/frontendIPConfigurations/appGwPublicFrontendIpIPv4')]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[parameters('publicIPAddresses_app_gw_pip_externalid')]"
                            }
                        }
                    },
                    {
                        "name": "appGwPrivateFrontendIpIPv4",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/frontendIPConfigurations/appGwPrivateFrontendIpIPv4')]",
                        "properties": {
                            "privateIPAddress": "10.0.3.4",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[concat(parameters('virtualNetworks_hub_vnet_externalid'), concat('/subnets/', parameters('applicationGateways_app_gw_name'), '-subnet'))]"
                            }
                        }
                    }
                ],
                "frontendPorts": [
                    {
                        "name": "port_80",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/frontendPorts/port_80')]",
                        "properties": {
                            "port": 80
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "backend-pool",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendAddressPools/backend-pool')]",
                        "properties": {
                            "backendAddresses": [
                                {
                                    "ipAddress": "10.0.10.4"
                                },
                                {
                                    "ipAddress": "10.1.10.4"
                                },
                                {
                                    "ipAddress": "10.2.10.4"
                                }
                            ]
                        }
                    },
                    {
                        "name": "onprem-backend-pool",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendAddressPools/onprem-backend-pool')]",
                        "properties": {
                            "backendAddresses": [
                                {
                                    "ipAddress": "10.0.10.4"
                                },
                                {
                                    "ipAddress": "10.1.10.4"
                                },
                                {
                                    "ipAddress": "10.2.10.4"
                                }
                            ]
                        }
                    }
                ],
                "loadDistributionPolicies": [],
                "backendHttpSettingsCollection": [
                    {
                        "name": "backend-settings",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendHttpSettingsCollection/backend-settings')]",
                        "properties": {
                            "port": 80,
                            "protocol": "Http",
                            "cookieBasedAffinity": "Disabled",
                            "pickHostNameFromBackendAddress": false,
                            "path": "/default.html",
                            "requestTimeout": 20
                        }
                    },
                    {
                        "name": "onprem-backend-settings",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendHttpSettingsCollection/onprem-backend-settings')]",
                        "properties": {
                            "port": 80,
                            "protocol": "Http",
                            "cookieBasedAffinity": "Disabled",
                            "pickHostNameFromBackendAddress": false,
                            "path": "/default.html",
                            "requestTimeout": 20
                        }
                    }
                ],
                "backendSettingsCollection": [],
                "httpListeners": [
                    {
                        "name": "app-listener",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/httpListeners/app-listener')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/frontendIPConfigurations/appGwPublicFrontendIpIPv4')]"
                            },
                            "frontendPort": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/frontendPorts/port_80')]"
                            },
                            "protocol": "Http",
                            "hostNames": [],
                            "requireServerNameIndication": false,
                            "customErrorConfigurations": []
                        }
                    },
                    {
                        "name": "onprem-listener",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/httpListeners/onprem-listener')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/frontendIPConfigurations/appGwPrivateFrontendIpIPv4')]"
                            },
                            "frontendPort": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/frontendPorts/port_80')]"
                            },
                            "protocol": "Http",
                            "hostNames": [],
                            "requireServerNameIndication": false,
                            "customErrorConfigurations": []
                        }
                    }
                ],
                "listeners": [],
                "urlPathMaps": [],
                "requestRoutingRules": [
                    {
                        "name": "app-settings",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/requestRoutingRules/app-settings')]",
                        "properties": {
                            "ruleType": "Basic",
                            "priority": 400,
                            "httpListener": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/httpListeners/app-listener')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendAddressPools/backend-pool')]"
                            },
                            "backendHttpSettings": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendHttpSettingsCollection/backend-settings')]"
                            }
                        }
                    },
                    {
                        "name": "onprem-app-settings",
                        "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/requestRoutingRules/onprem-app-settings')]",
                        "properties": {
                            "ruleType": "Basic",
                            "priority": 410,
                            "httpListener": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/httpListeners/onprem-listener')]"
                            },
                            "backendAddressPool": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendAddressPools/onprem-backend-pool')]"
                            },
                            "backendHttpSettings": {
                                "id": "[concat(resourceId('Microsoft.Network/applicationGateways', parameters('applicationGateways_app_gw_name')), '/backendHttpSettingsCollection/onprem-backend-settings')]"
                            }
                        }
                    }
                ],
                "routingRules": [],
                "probes": [],
                "rewriteRuleSets": [],
                "redirectConfigurations": [],
                "privateLinkConfigurations": [],
                "enableHttp2": true
            }
        }
    ]
}