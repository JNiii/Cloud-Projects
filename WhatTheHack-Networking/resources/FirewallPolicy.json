{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "type": "String"
        },
        "app-gw-subnet": {
            "type": "string",
            "defaultValue": "10.0.3.0/24"
        },
        "onprem-vnet": {
            "type": "string",
            "defaultValue": "172.16.0.0/16"
        },
        "hub-workload-subnet": {
            "type": "string",
            "defaultValue": "10.0.10.0/24"
        },
        "spoke1-vnet": {
            "type": "string",
            "defaultValue": "10.1.0.0/16"
        },
        "spoke2-vnet": {
            "type": "string",
            "defaultValue": "10.2.0.0/16"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/firewallPolicies",
            "apiVersion": "2024-03-01",
            "name": "[parameters('policyName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "tier": "Basic"
                }
            }
        },
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2024-03-01",
            "name": "[concat(parameters('policyName'), '/DefaultNetworkRuleCollectionGroup')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/firewallPolicies', parameters('policyName'))]"
            ],
            "properties": {
                "priority": 300,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                        "action": {
                            "type": "Allow"
                        },
                        "rules": [
                            {
                                "ruleType": "NetworkRule",
                                "name": "Hub",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                    "[parameters('onprem-vnet')]"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "[parameters('hub-workload-subnet')]"
                                ],
                                "destinationIpGroups": [],
                                "destinationFqdns": [],
                                "destinationPorts": [
                                    "3389"
                                ]
                            },
                            {
                                "ruleType": "NetworkRule",
                                "name": "Spoke1",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                   "[parameters('onprem-vnet')]"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "[parameters('spoke1-vnet')]"
                                ],
                                "destinationIpGroups": [],
                                "destinationFqdns": [],
                                "destinationPorts": [
                                    "3389"
                                ]
                            },
                            {
                                "ruleType": "NetworkRule",
                                "name": "Spoke2",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                    "[parameters('onprem-vnet')]"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "[parameters('spoke2-vnet')]"
                                ],
                                "destinationPorts": [
                                    "3389"
                                ]
                            }
                        ],
                        "name": "RDP",
                        "priority": 400
                    }
                ]
            }
        }
    ]
}