{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vaultResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The name of the resource group that contains the keyvault."
            },
            "defaultValue": "[resourceGroup().name]"
        },
        "vaultSubscription": {
            "type": "string",
            "defaultValue": "[subscription().subscriptionId]",
            "metadata": {
                "description": "The name of the subscription that contains the keyvault."
            }
        },
        "vaultName": {
            "type": "string",
            "metadata": {
                "description": "The name of the keyvault that contains the secret."
            },
            "defaultValue": "vmkv3005"
        },
        "secretName": {
            "type": "string",
            "metadata": {
                "description": "The name of the secret."
            },
            "defaultValue": "winadmin"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "hub-onprem-connection",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2024-07-01",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "parameters": {
                    "adminPass": {
                        "reference": {
                            "keyVault": {
                                "id": "[resourceId(parameters('vaultSubscription'), parameters('vaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                            },
                            "secretName": "[parameters('secretName')]"
                        }
                    }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "hubGatewayName": {
                            "type": "string",
                            "defaultValue": "hub-gw"
                        },
                        "onpremGatewayName": {
                            "type": "string",
                            "defaultValue": "onprem-gw"
                        },
                        "connectionProtocol": {
                            "type": "string",
                            "defaultValue": "IKEv2"
                        },
                        "adminPass": {
                            "type": "secureString"
                        }
                    },
                    "variables": {},
                    "resources": [
                        {
                            "name": "[concat(parameters('hubGatewayName'), '-to-', parameters('onpremGatewayName'))]",
                            "type": "Microsoft.Network/connections",
                            "apiVersion": "2024-01-01",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "connectionType": "Vnet2Vnet",
                                "virtualNetworkGateway1": {
                                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('hubGatewayName'))]"
                                },
                                "useLocalAzureIpAddress": false,
                                "enableBgp": false,
                                "connectionProtocol": "[parameters('connectionProtocol')]",
                                "authenticationType": "PSK",
                                "SharedKey": "[parameters('adminPass')]",
                                "virtualNetworkGateway2": {
                                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('onpremGatewayName'))]"
                                }
                            }
                        },
                        {
                            "name": "[concat(parameters('onpremGatewayName'), '-to-', parameters('hubGatewayName'))]",
                            "type": "Microsoft.Network/connections",
                            "apiVersion": "2024-01-01",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "connectionType": "Vnet2Vnet",
                                "virtualNetworkGateway1": {
                                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('onpremGatewayName'))]"
                                },
                                "useLocalAzureIpAddress": false,
                                "enableBgp": false,
                                "connectionProtocol": "[parameters('connectionProtocol')]",
                                "authenticationType": "PSK",
                                "SharedKey": "Winadmin1234",
                                "virtualNetworkGateway2": {
                                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('hubGatewayName'))]"
                                }
                            }
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {}
}